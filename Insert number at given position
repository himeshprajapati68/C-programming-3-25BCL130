#include <stdio.h>

int main() {
    int arr[20], size, i, pos, num;

    // Input current array size
    printf("Enter number of elements (max 19): ");
    scanf("%d", &size);

    // Input array elements
    printf("Enter %d numbers:\n", size);
    for(i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Input number and position
    printf("Enter number to insert: ");
    scanf("%d", &num);
    printf("Enter position to insert (1 to %d): ", size + 1);
    scanf("%d", &pos);

    if(pos < 1 || pos > size + 1) {
        printf("Invalid position!\n");
        return 1;
    }

    // Shift elements to the right from position
    for(i = size; i >= pos; i--) {
        arr[i] = arr[i - 1];
    }

    // Insert number
    arr[pos - 1] = num;
    size++; // Increase array size

    // Print new array
    printf("\nArray after insertion:\n");
    for(i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
