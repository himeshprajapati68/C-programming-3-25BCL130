#include <stdio.h>

int main() {
    int arr[20], size, i, pos;

    // Input array size
    printf("Enter number of elements (max 20): ");
    scanf("%d", &size);

    // Input array elements
    printf("Enter %d numbers:\n", size);
    for(i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Input position to delete
    printf("Enter position to delete (1 to %d): ", size);
    scanf("%d", &pos);

    if(pos < 1 || pos > size) {
        printf("Invalid position!\n");
        return 1;
    }

    // Delete element by shifting
    for(i = pos - 1; i < size - 1; i++) {
        arr[i] = arr[i + 1];
    }
    size--; // Reduce array size

    // Print array after deletion
    printf("\nArray after deletion:\n");
    for(i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
