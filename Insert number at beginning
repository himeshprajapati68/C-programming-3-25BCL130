#include <stdio.h>

int main() {
    int arr[10], size, i, num;

    // Input current array size
    printf("Enter number of elements (max 9): ");
    scanf("%d", &size);

    // Input array elements
    printf("Enter %d numbers:\n", size);
    for(i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Input number to insert
    printf("Enter number to insert at the beginning: ");
    scanf("%d", &num);

    // Shift elements to the right
    for(i = size; i > 0; i--) {
        arr[i] = arr[i - 1];
    }

    // Insert new number at index 0
    arr[0] = num;
    size++; // Increase array size

    // Print new array
    printf("\nArray after insertion:\n");
    for(i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
