#include <stdio.h>

int main() {
    int arr[20], size, i;

    // Input array size
    printf("Enter number of elements (max 20): ");
    scanf("%d", &size);

    // Input array elements
    printf("Enter %d numbers:\n", size);
    for(i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Delete first element by shifting all elements to the left
    for(i = 0; i < size - 1; i++) {
        arr[i] = arr[i + 1];
    }
    size--; // Reduce array size

    // Print array after deletion
    printf("\nArray after deleting first element:\n");
    for(i = 0; i < size; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
