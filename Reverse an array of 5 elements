#include <stdio.h>

int main() {
    int arr[5], rev[5];
    int i, j;

    // Input 5 elements
    printf("Enter 5 numbers:\n");
    for(i = 0; i < 5; i++) {
        printf("arr[%d] = ", i);
        scanf("%d", &arr[i]);
    }

    // Reverse the array
    j = 0;
    for(i = 4; i >= 0; i--) {
        rev[j] = arr[i];
        j++;
    }

    // Print original array
    printf("\nOriginal Array:\n");
    for(i = 0; i < 5; i++) {
        printf("%d ", arr[i]);
    }

    // Print reversed array
    printf("\n\nReversed Array:\n");
    for(i = 0; i < 5; i++) {
        printf("%d ", rev[i]);
    }

    return 0;
}
