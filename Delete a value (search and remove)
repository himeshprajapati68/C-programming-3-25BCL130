#include <stdio.h>

int main() {
    int arr[20], size, i, value, found = 0;

    // Input array size
    printf("Enter number of elements (max 20): ");
    scanf("%d", &size);

    // Input array elements
    printf("Enter %d numbers:\n", size);
    for(i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    // Input value to delete
    printf("Enter value to delete: ");
    scanf("%d", &value);

    // Search and delete
    for(i = 0; i < size; i++) {
        if(arr[i] == value) {
            found = 1;
            // Shift elements left
            for(int j = i; j < size - 1; j++) {
                arr[j] = arr[j + 1];
            }
            size--;  // Reduce array size
            i--;     // Stay at same index in case of duplicates
        }
    }

    if(found) {
        // Print updated array
        printf("\nArray after deleting %d:\n", value);
        for(i = 0; i < size; i++) {
            printf("%d ", arr[i]);
        }
    } else {
        printf("\nValue %d not found in the array.\n", value);
    }

    return 0;
}
